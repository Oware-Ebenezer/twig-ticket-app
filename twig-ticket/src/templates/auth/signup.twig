{% extends "base.twig" %}
{% set title = "Create an Account" %}

{% block extra_styles %}

{% endblock %}

{% block content %}
<main class="min-h-screen flex flex-col justify-center items-center bg-gradient-to-b from-[#0f172a] to-[#1e293b] text-white px-4">
  <section class="w-full max-w-md bg-[#0b1220]/70 border border-white/10 rounded-2xl shadow-xl p-8 backdrop-blur-sm">
    <h1 class="text-2xl font-bold text-center mb-2">Create an Account</h1>
    <p class="text-center text-sm text-gray-400 mb-6">
      Fill in your details to get started
    </p>

    {# Optional: display backend error messages #}
    {% if session.error %}
      <div class="bg-red-600/20 border border-red-600 text-red-300 rounded p-3 mb-4 text-sm text-center">
        {{ session.error }}
      </div>
    {% endif %}

    <form method="POST" action="/auth/signup" class="flex flex-col gap-4">
      <input
        type="text"
        name="name"
        placeholder="Mr. John Smith"
        required
        class="w-full p-3 rounded-lg bg-white/5 border border-white/10 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition"
      >

      <input
        type="email"
        name="email"
        placeholder="example@gmail.com"
        required
        class="w-full p-3 rounded-lg bg-white/5 border border-white/10 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition"
      >

      <input
        type="password"
        name="password"
        placeholder="*************"
        required
        class="w-full p-3 rounded-lg bg-white/5 border border-white/10 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition"
      >

      <button
        type="submit"
        class="mt-2 w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 rounded-lg transition-all duration-300 shadow-md"
      >
        Sign Up
      </button>
    </form>

    <p class="text-center text-sm text-gray-400 mt-6">
      Already have an account?
      <a href="/auth/login" class="text-indigo-400 hover:text-indigo-300 transition">Login</a>
    </p>
  </section>
</main>
{% endblock %}
