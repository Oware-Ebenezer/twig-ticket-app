{% extends "base.twig" %}
{% set title = "Login to Your Account" %}

{% block content %}
<main class="min-h-screen flex items-center justify-center px-4">
  <section
    class="bg-[#0b1220]/80 backdrop-blur-sm border border-white/10 rounded-2xl p-8 shadow-lg w-full max-w-md text-white"
  >
    <h1 class="text-2xl font-bold mb-2 text-center">Login</h1>
    <p class="text-sm text-gray-400 mb-6 text-center">
      Welcome back! Please log in to your account.
    </p>

    {% if session.error %}
  <div class="bg-red-600/20 border border-red-600 text-red-300 rounded p-3 mb-4 text-sm">
    {{ session.error }}
  </div>
{% endif %}

    <form method="POST" action="/auth/login" class="space-y-4">
      <div>
        <label class="block text-sm mb-1 text-gray-300">Email</label>
        <input
          type="email"
          name="email"
          placeholder="example@gmail.com"
          required
          class="w-full px-4 py-2 rounded-lg bg-[#1e293b] border border-white/10 focus:ring-2 focus:ring-blue-500 focus:outline-none"
        >
      </div>

      <div>
        <label class="block text-sm mb-1 text-gray-300">Password</label>
        <input
          type="password"
          name="password"
          placeholder="*************"
          required
          class="w-full px-4 py-2 rounded-lg bg-[#1e293b] border border-white/10 focus:ring-2 focus:ring-blue-500 focus:outline-none"
        >
      </div>

      <button
        type="submit"
        class="w-full bg-blue-600 hover:bg-blue-700 rounded-lg py-2 mt-4 font-semibold transition-colors"
      >
        Login
      </button>
    </form>

    <p class="text-center text-sm text-gray-400 mt-6">
      Don't have an account?
      <a href="/auth/signup" class="text-blue-400 hover:underline">Sign up</a>
    </p>
  </section>
</main>
{% endblock %}
